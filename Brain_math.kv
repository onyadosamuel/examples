#:import hex kivy.utils.get_color_from_hex
<FlatButton@ButtonBehavior+Label>:
    font_size:16
#<ImageButton@ButtonBehavior+Image>:
ScreenManagement:
    id:manager
    HomeScreen:
        id:home
    SignScreen:
        id:sign
    CreateScreen:
        id:create
    WorkScreen:
        id:work


# THIS IS THE SCREEN FOR THE HOMEWINDOW
<HomeScreen>:
    id:home
    name:"home"
    orientation:"vertical"
    spacing:10
    space_x:self.size[0]/4
    BoxLayout:
        orientation:"vertical"
        spacing:10
        space_x:self.size[0]/4
        canvas.before:
            #Color:
                #rgba:(1,1,1,1)
            Rectangle:
                size:self.size
                pos:self.pos
                source: 'download (2).png'
        BoxLayout:
            canvas.before:
                Color:
                    rgba:hex('#208e6a')     
                Rectangle:
                    size:self.size
                    pos:self.pos
            size_hint_y:.2
            #height:

            Label:
                text:"BRAINS"
                font_size:100
                bold:True
                size_hint_x:.9



        BoxLayout:
            orientation:"vertical"
            padding: home.space_x,10
            spacing:10
            Button:
                text:"Sign In"
                bold:True
                size_hint_y: None
                height:40
                background_color: (0,0,0,0)
                background_normal:''
                on_release:app.root.current='sign'

            Button:
                text:"Create Account"
                bold:True
                size_hint_y: None
                height:100
                background_color:(.06,.45,.45,1)
                background_normal:''
                on_release:app.root.current="create"

            Button:
                text:"Users"
                bold:True
                size_hint_y: None
                height:100
                background_color:(.06,.45,.45,1)
                background_normal:''
            Label:
                id:sp3
                size_hint_y: None
                height:40




# THIS IS THE SCREEN FOR THE SIGNIN WINDOW
<SignScreen>:
    name:"sign"
    id:sign
    orientation:"vertical"
    spacing:10
    space_x:self.size[0]/3
    BoxLayout:
        orientation:"vertical"
        spacing:10
        canvas.before:
            Color:
                rgba:(1,1,1,1)
            Rectangle:
                size:self.size
                pos:self.pos


    # this is the header bar
        BoxLayout:
            size_hint_y:None
            height:40
            canvas.before:
                Color:
                    rgba:hex('#208e6a')
                Rectangle:
                    size:self.size
                    pos:self.pos

            ImageButton:
            # this is a back button
                source:'icons8-double-left-96.png'
                size_hint_x:.05
		        on_release:app.root.current='home'	
            Label:
                text:"SignIn"
                size_hint_x:.9

    # this contains textinput boxes to allow user log in
        BoxLayout:
            orientation:"vertical"
            spacing:10
            padding:sign.space_x,10
            BoxLayout:
                orientation:"vertical"
                spacing:10
                size_hint_y:None
                height:200
                TextInput:
                # box that recieves the username
                    id:si_username # an id for the username
                    hint_text:"username"
                    multiline:False
                    on_text_validate:si_password.focus=True
                TextInput:
                # box that recieves the username password
                    id:si_password # an id for the user password
                    hint_text:"password"
                    multiline:False
                    password:True
                    on_text_validate:app.Sign_user()
            Label:
            # this an empty label betweem the input boxes and login button
                id:check  # id that check for the validation of the account 
                size_hint_y:None
                height:40
                text:''
                color:(.06,.45,.45,1)
            Button:
            # this is the login button
                size_hint_y:None
                height:40
                text:"login"
                background_color:(.06,.45,.45,1)
                background_normal:''
                on_release:app.Sign_user()
            Label:
            # this an empty label below the button
                id:sp2
                size_hint_y: None
                height:10



# THIS IS THE SCREEN FOR THE CREATE ACCOUNT WINDOW
<CreateScreen>:
    name:"create"
    id:create
    space_x:self.size[0]/3
    BoxLayout:
        orientation:"vertical"
        spacing:10
        canvas.before:
            Color:
                rgba:(1,1,1,1)
            Rectangle:
                size:self.size
                pos:self.pos
    # this is the header bar
        BoxLayout:
            canvas.before:
                Color:
                    rgba:hex('#208e6a')
                Rectangle:
                    size:self.size
                    pos:self.pos
            size_hint_y:None
            height:40
            ImageButton:
                # this is a back button
                source:'icons8-double-left-96.png'
                size_hint_x:.05
		        on_release:app.root.current='home'
            Label:
                text:"Create Account"

    # this contains three input boxes and a button
        BoxLayout:
            orientation:"vertical"
            spacing:10
            padding:create.space_x,10
            BoxLayout:
            # boxlayout that contains the three input boxes
                orientation:"vertical"
                spacing:10
                TextInput:
                    id:cr_username
                #input box to recieve new username
                    hint_text:"username"
                    size_hint_y:None
                    multiline:False
                    height:40
                    on_text_validate:cr_newpass.focus=True
                TextInput:
                    id:cr_newpass
                #input box to recieve new username password
                    hint_text:"password"
                    size_hint_y:None
                    multiline:False
                    height:40
                    on_text_validate:cr_confirmpass.focus=True
                TextInput:
                    id:cr_confirmpass
                #input box to allows the user to confirm the new password
                    hint_text:"confirm password"
                    size_hint_y:None
                    multiline:False
                    height:40
            Label:
            # this is an empty label betweem the input boxes and button
                id:sp4
                text:''
                color:(.06,.45,.45,1)
                size_hint_y:None
                height:40
            Button:
            # this is the create account button
                text:"create"
                size_hint_y:None
                height:40
                background_color:(.06,.45,.45,1)
                background_normal:''
                on_release:app.Create_user()
            Label:
            # this is an empty label below the button
                id:sp5
                text:''
                color:(.65,.45,.45,1)
                size_hint_y:None
                height:80




# THIS IS THE SCREEN FOR THE WORK WINDOW
<WorkScreen>:
    name:"work"
    id:work
    BoxLayout:
        orientation:"vertical"
        spacing:10
        canvas.before:
            Color:
                rgba:(1,1,1,1)
            Rectangle:
                size:self.size
                pos:self.pos
    # header bar for the workscreen window which contains a drop button and a back button
        BoxLayout:
            size_hint_y:None
            height:40
            canvas.before:
                Color:
                    rgba:hex('#208e6a')
                Rectangle:
                    size:self.size
                    pos:self.pos
            ImageButton:
            # this is the back button
                source:'icons8-double-left-96.png'
                size_hint_x:.05
		        on_release:app.Work_user_update()
            Label:
                text:"workscreen"
            ImageButton:
            # this is the drop down button
                source:'icons8-squared-menu-64.png'
                size_hint_x:.05


    # this is the middle area for display of info such as the level,user,score and the numbers
        BoxLayout:
            Label:
            # this is the area where the numbers will be shown
                id:sheet
                text:''
                color:(.06,.45,.45,1)
                font_size:100
                size_hint_x:.999
            BoxLayout:
                canvas.before:
                    Color:
                        rgba:(.06,.45,.45,1)
                    Rectangle:
                        size:self.size
                        pos:self.pos
                        pos:
            # this is where other important info are displayed
                orientation:"vertical"
                Label:
                # this is the upper blank sheet
                    id:upsheet
                    text:''
                BoxLayout:
                    orientation:"vertical"
                    spacing:10
                    BoxLayout:
                    # this displays the current user
                        Label:
                            text:"user:"
                        Label:
                            id:current_user
                            text:''
                    BoxLayout:
                    # this displays the current level of user
                        Label:
                            text:"speed:"
                        Label:
                            id:current_speed
                            text:''
                    BoxLayout:
                    # this displays the current score of user
                        Label:
                            text:"score:"
                        Label:
                            id:current_score
                            text:''
                Label:
                # this is the lower blank sheet
                    id:downsheet
                    text:''


    # this is the lower bar for controlling the display either start or reset
        BoxLayout:
            size_hint_y:None
            height:40
            spacing:10
            Label:
                id:answer_wrong_right
                text:''
                color:(.06,.45,.45,1)
                font_size:18
            Button:
            # this is a button that  resets the numbers
                text:"reset"
                size_hint_x:.4
                background_color:(.06,.45,.45,1)
                background_normal:''
                on_release:app.Work_user_reset()
            Button:
            # this is a button that start the whole process
                text:"start"
                size_hint_x:.4
                background_color:(.06,.45,.45,1)
                background_normal:''
                on_release:app.Work_user_start()
            TextInput:
            # this is textbox that recieves answer from the user
                id:answer
                hint_text:"answer here"
                multiline:False
                size_hint_x:.5
                on_text_validate:app.Work_user_answer()
            TextInput:
            # this is textbox that recieves ramge from the user
                id:min_range
                hint_text:"minimum number"
                multiline:False
                size_hint_x:.7
                on_text_validate:max_range.focus = True
            TextInput:
            # this is textbox that recieves ramge from the user
                id:max_range
                hint_text:"maximum number"
                multiline:False
                size_hint_x:.7
            TextInput:
            # this is textbox that recieves how many words per second
                id:wps
                hint_text:"nps"
                multiline:False
                size_hint_x:.2
                on_text_validate:app.Work_user_wps()






